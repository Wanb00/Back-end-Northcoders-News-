{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles with optional sorting and ordering",
    "queries": {
      "sort_by": "column name to sort by (e.g. title, votes, created_at). Defaults to created_at.",
      "order": "'asc' or 'desc'. Defaults to 'desc'.",
      "topic": "filter articles by topic"
    },
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url": "https://..."
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "responds with a single article by article_id",
    "exampleResponse": {
      "article": [
        {
          "author": "butter_bridge",
          "title": "Living in the shadow of a great man",
          "article_id": 1,
          "body": "I find this existence challenging",
          "topic": "mitch",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 100,
          "article_img_url": "https://..."
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "responds with a list of comments by article_id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 11,
          "votes": 0,
          "created_at": "2020-09-19T23:10:00.000Z",
          "author": "icellusedkars",
          "body": "Ambidextrous marsupial",
          "article_id": 3
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment to the given article",
    "requestBody": {
      "username": "butter_bridge",
      "body": "Great article!"
    },
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 123,
          "votes": 0,
          "created_at": "2020-04-06T12:17:00.000Z",
          "author": "butter_bridge",
          "body": "Great article!",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "post a new article",
    "requestBody": {
      "title": "Article",
      "topic": "mitch",
      "author": "butter_bridge",
      "body": "This is a new article",
      "article_img_url": "https://..."
    },
    "exampleResponse": {
      "article": {
        "article_id": 14,
        "article_img_url": "https://...",
        "author": "butter_bridge",
        "body": "This is a tester article",
        "created_at": "2020-04-06T12:17:00.000Z",
        "title": "Test Article",
        "topic": "mitch",
        "votes": 0
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote count of a specific article",
    "requestBody": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Running an App",
        "body": "...",
        "votes": 101,
        "topic": "coding",
        "author": "butter_bridge",
        "created_at": "2020-06-11T07:33:00.000Z",
        "article_img_url": "https://..."
      }
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "updates vote count of a specific comment",
    "requestBody": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "article_id": 2,
        "votes": 5,
        "author": "butter_bridge",
        "body": "Replacing the quiet elegance of the dark suit and tie with the casual indifference of these muted earth tones is a form of fashion suicide, but, uh, call me crazy â€” onyou it works."
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by its ID",
    "exampleResponse": {
      "status": 204,
      "body": {}
    }
  },
  "GET /api/users": {
    "description": "fetches all users",
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "Jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        },
        {
          "username": "rogersop",
          "name": "paul",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24394918?s=400&v=4"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "selects a user by their username",
    "exampleResponse": {
      "user": {
        "username": "butter_bridge",
        "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg",
        "name": "Jonny"
      }
    }
  }
}
